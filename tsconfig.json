{
    "compilerOptions": {
        "baseUrl": "./lib",
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2015"
    },
    "include": [
        "./src/**/*",
        "./typings/**/*"
    ]
}